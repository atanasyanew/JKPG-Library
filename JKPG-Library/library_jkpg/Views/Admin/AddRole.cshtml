@model library_jkpg.Models.RoleDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Role</h2>
<h4>ADMINISTRATION</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div>
            <a href="@Url.Action("Index", "Admin")"
               class="btn btn-default">
                <i class="glyphicon glyphicon-chevron-left"></i> Back to List
            </a>

            <a href="@Url.Action("ViewAllRoles", "Admin")" class="btn btn-default"><i class="glyphicon glyphicon-eye-open"></i> Roles Management</a>

        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RoleName,
           htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RoleName,
               new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RoleName,
               "",
               new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default btn-success" />
             
               @*@Html.ActionLink("Back to List",
               "ViewAllRoles",
               null,
               new { @class = "btn btn-default" })*@

            </div>
        </div>
    </div>
}
